<% @page_title = "MEMBER LISTS" %>
<h1><%= @page_title %></h1>

<%= form_tag : search_members, method: get do %>
  <p><%= TEXT_FIELD_TAG "q", params[:q] %></p>
  <%= submit_tag "SEARCH" %>
<% end %>

<p><%= link_to "NEW REGISTERATION", :new_member %></p>

<% if @members.present? %>
<table class="list">
  <tr>
    <th>NUMBER</th>
    <th>USER</th>
    <th>NAME</th>
    <th>COMMANDS</th>
  </tr>

  <% @members.each do |member| %>

  <tr>
    <td style="text-align: right"><%= member.number %></td>
    <td><%= link_to member.name, member %></td>
    <td><%= member.full_name %></td>
    <td>
      <%= link_to "EDIT", [:edit, member] %> | 
      <%= link_to "DELETE", member, method: :delete,
	    data: { confirm: "Confirm to your action DELETE?" }%>
    </td>
  </tr>

  <% end %>
</table>

<% else %>

<p>Not Found.</p>
<% end %>


